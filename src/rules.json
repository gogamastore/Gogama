{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        // Allow a user to write to their own node if it doesn't exist yet (for registration)
        // OR if the user is an admin
        ".write": "(auth != null && auth.uid === $uid && !data.exists()) || (auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "userChats": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "chats": {
      "$chatId": {
        ".read": "auth != null && $chatId.contains(auth.uid)",
        ".write": "auth != null && $chatId.contains(auth.uid)"
      }
    }
  }
}
