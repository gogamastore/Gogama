
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has the 'admin' role
    function isAdmin() {
      // Check if user is authenticated and their document in 'user' collection has role 'admin'
      return request.auth != null && get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the requester is the owner of the document
    function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
    }

    // Rules for user profiles and subcollections
    match /user/{userId} {
      // An authenticated user can read their own profile. Admins can read any profile.
      allow read: if isOwner(userId) || isAdmin();
      
      // A user can create their own profile (on signup). Admins can create users too.
      allow create: if isOwner(userId) || isAdmin();

      // A user can update their own profile. Admins can update any user profile.
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete user profiles.
      allow delete: if isAdmin();

      // Rules for user's addresses subcollection
      match /addresses/{addressId} {
        // A user can manage their own addresses.
        allow read, write, create, delete: if isOwner(userId);
      }
    }

    // Rules for products collection
    match /products/{productId} {
      // Anyone can read a single product or list products. This allows a public-facing gallery.
      allow get, list: if true;

      // Only admins can create, delete, or fully overwrite products.
      allow create, delete, write: if isAdmin();
      
      // Authenticated users (resellers) can perform updates,
      // specifically for decrementing stock during an order.
      allow update: if request.auth != null;
    }

    // Rules for orders collection
    match /orders/{orderId} {
        // Users can create their own orders.
        allow create: if isOwner(request.resource.data.customerId);

        // Users can read or update their own orders. Admins can manage any order.
        // Update is necessary for cancellation or uploading payment proof.
        allow read, update: if isOwner(resource.data.customerId) || isAdmin();

        // Only admins can delete orders.
        allow delete: if isAdmin();
    }

    // Rules for admin-only collections
    match /stock_adjustments/{adjustmentId} { allow read, write: if isAdmin(); }
    match /purchase_transactions/{transactionId} { allow read, write: if isAdmin(); }
    match /operational_expenses/{expenseId} { allow read, write: if isAdmin(); }

    // Rules for public-read, admin-write collections
    match /{collectionName}/{docId}
      where collectionName in ['bank_accounts', 'whatsapp_contacts', 'banners', 'promotions', 'trending_products'] {
        allow read: if true;
        allow write: if isAdmin();
      }
  }
}
