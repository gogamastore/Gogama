
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can only read/write their own data. Admins can read anyone's data.
    match /user/{userId} {
      allow read: if isAdmin() || request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Users can only manage their own address book.
    match /user/{userId}/addresses/{addressId} {
        allow read, write: if request.auth.uid == userId;
    }

    // Products are publicly readable. Only admins can modify them.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Categories are publicly readable. Only admins can modify them.
    match /product_categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Banners are publicly readable. Only admins can modify them.
    match /banners/{bannerId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Promotions are publicly readable. Only admins can modify them.
    match /promotions/{promoId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Trending products are publicly readable. Only admins can modify them.
    match /trending_products/{trendingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // WhatsApp contacts are publicly readable. Only admins can modify them.
    match /whatsapp_contacts/{contactId} {
       allow read: if true;
       allow write: if isAdmin();
    }
    
     // Bank accounts are publicly readable. Only admins can modify them.
    match /bank_accounts/{accountId} {
       allow read: if true;
       allow write: if isAdmin();
    }

    // Orders can only be created by authenticated users.
    // Users can only read their own orders. Admins can read all orders.
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update: if isAdmin() || request.auth.uid == resource.data.customerId;
      allow delete: if isAdmin();
    }

    // Transaction & log data is admin-only access.
    match /purchase_transactions/{transactionId} {
        allow read, write: if isAdmin();
    }
    
    match /operational_expenses/{expenseId} {
        allow read, write: if isAdmin();
    }

    match /stock_adjustments/{adjustmentId} {
        allow read, write: if isAdmin();
    }
    
    match /suppliers/{supplierId} {
      allow read, write: if isAdmin();
    }
  }
}
