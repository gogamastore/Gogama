rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'user' collection
    match /user/{userId} {
      // Allow any authenticated user to read user data. This is CRUCIAL for the isAdmin() function to work in other rules.
      allow read: if request.auth != null;
      
      // Allow a user to create their own document (register) or if an admin is creating it.
      allow create: if request.auth.uid == userId || isAdmin();

      // Allow a user to update their own document, or if an admin is updating it.
      allow update: if request.auth.uid == userId || isAdmin();
      
      // Only admins can delete user documents from the collection.
      allow delete: if isAdmin();
      
      // Allow users to manage their own subcollections (e.g., addresses)
      match /{allPaths=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Rules for products
    match /products/{productId} {
      allow read; // Everyone can see products
      allow write: if isAdmin(); // Only admins can create, update, delete products
    }
    
    // Rules for orders
    match /orders/{orderId} {
      allow read, update: if get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'reseller' || isAdmin();
      allow create: if request.auth.uid != null;
      allow delete: if isAdmin();
    }
    
    // Rules for stock adjustments
    match /stock_adjustments/{adjustmentId} {
      allow read, write: if isAdmin();
    }

    // Rules for purchase transactions
    match /purchase_transactions/{transactionId} {
      allow read, write: if isAdmin();
    }

    // Rules for operational expenses
    match /operational_expenses/{expenseId} {
        allow read, write: if isAdmin();
    }
    
    // Rules for bank accounts (Settings)
    match /bank_accounts/{accountId} {
      allow read: if request.auth != null; // Any logged-in user can see bank accounts
      allow write: if isAdmin(); // Only admins can create/update/delete
    }

    // Rules for WhatsApp contacts (Settings)
    match /whatsapp_contacts/{contactId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Rules for Banners (Design Settings)
    match /banners/{bannerId} {
      allow read; // Everyone can see banners
      allow write: if isAdmin(); // Only admins can manage banners
    }
    
    // Rules for Promotions (Promo Settings)
    match /promotions/{promoId} {
      allow read; // Everyone can see promotions
      allow write: if isAdmin(); // Only admins can manage promotions
    }
  }
}
