
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aturan default untuk menolak semua akses
    match /{document=**} {
      allow read, write: if false;
    }

    // Mengizinkan pengguna terautentikasi membaca dan menulis data mereka sendiri
    match /user/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      // Aturan untuk subkoleksi alamat
      match /addresses/{addressId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Mengizinkan semua pengguna terautentikasi (admin/staf) untuk mengelola produk
    match /products/{productId} {
      allow read, write, delete: if request.auth != null;
    }

    // Mengizinkan semua pengguna terautentikasi (admin/staf) untuk mengelola pesanan
    match /orders/{orderId} {
        allow read, write, delete: if request.auth != null;
    }
    
    // Mengizinkan semua pengguna terautentikasi (admin/staf) untuk mengelola transaksi pembelian
    match /purchase_transactions/{transactionId} {
        allow read, write, delete: if request.auth != null;
    }

    // Mengizinkan semua pengguna terautentikasi (admin/staf) untuk mengelola biaya operasional
    match /operational_expenses/{expenseId} {
        allow read, write, delete: if request.auth != null;
    }

    // Mengizinkan semua pengguna terautentikasi (admin/staf) untuk mengelola penyesuaian stok
    match /stock_adjustments/{adjustmentId} {
        allow read, write, delete: if request.auth != null;
    }
    
    // Mengizinkan semua pengguna terautentikasi untuk membaca data banner, kontak, dan rekening
    match /banners/{bannerId} {
      allow read: if request.auth != null;
      // Hanya admin yang bisa mengubah
      allow write, delete: if request.auth != null; // Nanti bisa diperketat ke role admin
    }
    match /whatsapp_contacts/{contactId} {
       allow read: if request.auth != null;
       allow write, delete: if request.auth != null; 
    }
    match /bank_accounts/{accountId} {
       allow read: if request.auth != null;
       allow write, delete: if request.auth != null;
    }

    // Mengizinkan pengguna terautentikasi untuk mengelola promo dan produk trending
    match /promotions/{promoId} {
      allow read, write, delete: if request.auth != null;
    }
     match /trending_products/{trendingId} {
      allow read, write, delete: if request.auth != null;
    }
  }
}
