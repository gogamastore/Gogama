rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    match /products/{productId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /orders/{orderId} {
      allow create: if request.auth.uid != null;
      // Admin bisa membaca pesanan apa pun.
      allow get: if isAdmin();
      // Reseller hanya bisa membaca pesanan mereka sendiri.
      allow get: if request.auth.uid == resource.data.customerId;
      
      // Admin bisa mengambil daftar semua pesanan.
      // Reseller hanya bisa mengambil daftar pesanan mereka sendiri.
      allow list: if (isAdmin() || request.query.resource.data.customerId == request.auth.uid);
      
      // Admin bisa memperbarui pesanan apa pun.
      // Reseller bisa memperbarui pesanan mereka sendiri (misalnya, upload bukti bayar atau membatalkan).
      allow update: if isAdmin() || request.auth.uid == resource.data.customerId;
    }

    match /user/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
      // Semua pengguna yang login boleh mengambil daftar, untuk mencari admin di chat.
      allow list: if request.auth != null; 
      allow delete: if isAdmin();
    }
    
    match /user/{userId}/addresses/{addressId} {
       allow read, write, delete: if request.auth.uid == userId;
    }

    match /bank_accounts/{accountId} {
      allow read: if request.auth != null; // Semua pengguna yang login boleh lihat rekening
      allow create, update, delete: if isAdmin();
    }
    
    match /purchase_transactions/{transactionId} {
      allow read, create, update, delete: if isAdmin();
    }
    
    match /operational_expenses/{expenseId} {
       allow read, create, update, delete: if isAdmin();
    }

    match /stock_adjustments/{adjustmentId} {
      allow read, create, update, delete: if isAdmin();
    }
  }
}
