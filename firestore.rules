rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for user profiles
    match /user/{userId} {
      // Admin can read and write any user document
      // A user can read and write their own document
      allow read, update: if isAdmin() || request.auth.uid == userId;
      // Any authenticated user can create their own user document (for registration)
      allow create: if request.auth.uid == userId;
      // Admin can list users
      allow list: if isAdmin();
      
      // Rules for user's own addresses
      match /addresses/{addressId} {
      	allow read, write: if request.auth.uid == userId;
      }
    }

    // Rules for products
    match /products/{productId} {
      // Any authenticated user can read products
      allow read: if request.auth != null;
      // Only admins can create, update, or delete products
      allow write: if isAdmin();
    }

    // Rules for orders
    match /orders/{orderId} {
      // An admin can read any order.
      // A user can read their own order.
      allow get: if isAdmin() || request.auth.uid == resource.data.customerId;
      
      // An admin can query the whole collection.
      // A user can only query their own orders.
      allow list: if isAdmin() || (request.auth.uid == request.query.resource.data.customerId);
      
      // A user can create an order for themselves.
      // An admin can update any order.
      allow create: if request.auth.uid == request.resource.data.customerId;
      allow update: if isAdmin();
      
      // No one can delete orders for data integrity.
      allow delete: if false;
    }
    
    // Rules for stock adjustments
    match /stock_adjustments/{adjustmentId} {
    	// Only admins can write. Read access might be needed for reports.
    	allow read, write: if isAdmin();
    }
    
    // Rules for purchase transactions
    match /purchase_transactions/{transactionId} {
    	allow read, write: if isAdmin();
    }
    
    // Rules for operational expenses
    match /operational_expenses/{expenseId} {
    	allow read, write: if isAdmin();
    }
    
    // Rules for bank accounts used for payments
    match /bank_accounts/{accountId} {
    	// All authenticated users can read (to see payment info)
    	allow read: if request.auth != null;
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Rules for whatsapp contacts
    match /whatsapp_contacts/{contactId} {
       // All authenticated users can read (for resellers to see)
    	 allow read: if request.auth != null;
       // Only admins can write
       allow write: if isAdmin();
    }
  }
}