
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for user data
    match /user/{userId} {
      // Admins can manage all user profiles.
      allow read, write: if isAdmin();
      
      // Users can read and update their own profile.
      allow get, update: if request.auth.uid == userId;

      // New users can create their own profile upon registration.
      allow create: if request.auth.uid == userId;
    }
    
    // Rules for user sub-collections like addresses
    match /user/{userId}/addresses/{addressId} {
        // Users can manage their own addresses.
    	allow read, write: if request.auth.uid == userId;
    }

    // Rules for products
    match /products/{productId} {
      // Anyone can read product details.
      allow read;
      // Only admins can create, update, or delete products.
      allow write: if isAdmin();
    }
    
    // Rules for orders
    match /orders/{orderId} {
      // Admins can manage all orders.
      allow read, create, update: if isAdmin();

      // Resellers can create orders for themselves.
      allow create: if request.auth.uid == request.resource.data.customerId;
      
      // Resellers can only read their own orders.
      allow get, list: if request.auth.uid == resource.data.customerId;
      
      // Resellers can update specific fields on their own order (e.g., cancelling or uploading proof).
      allow update: if request.auth.uid == resource.data.customerId &&
                      (request.resource.data.status == 'Cancelled' || request.resource.data.keys().hasAny(['paymentProofUrl']));
    }
    
    // Rules for financial and stock-related transactions (Admin only)
    match /purchase_transactions/{transactionId} {
      allow read, write: if isAdmin();
    }
    
    match /operational_expenses/{expenseId} {
      allow read, write: if isAdmin();
    }
    
    match /stock_adjustments/{adjustmentId} {
      allow read, write: if isAdmin();
    }

    // Rules for settings data
    match /bank_accounts/{accountId} {
    	// Anyone can read bank accounts for payment.
    	allow read;
      // Only admins can manage bank accounts.
      allow write: if isAdmin();
    }
    
    match /whatsapp_contacts/{contactId} {
    	// Anyone can read contacts.
    	allow read;
      // Only admins can manage contacts.
      allow write: if isAdmin();
    }

    // Rules for new Design (Banners) settings
    match /banners/{bannerId} {
      // Anyone can read banners to display them on the reseller page.
      allow read;
      // Only admins can manage banners.
      allow write: if isAdmin();
    }

    // Rules for new Promo settings
    match /promotions/{promoId} {
      // Anyone can read active promotions.
      allow read;
      // Only admins can manage promotions.
      allow write: if isAdmin();
    }
  }
}
