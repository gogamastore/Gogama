rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      // Check if the user has an 'admin' role in the 'user' collection.
      // This requires that authenticated users can read their own role document.
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    match /user/{userId} {
      // Allow users to read their own data, and admins to read any user data.
      // Allow any authenticated user to read user docs, needed for isAdmin() to work in other rules.
      allow read: if request.auth != null;
      
      // Allow users to create their own user document (on signup)
      allow create: if request.auth.uid == userId;
      
      // Allow users to update their own data, or an admin to update any user data.
      allow update: if request.auth.uid == userId || isAdmin();
    }
    
    match /user/{userId}/addresses/{addressId} {
        allow read, write: if request.auth.uid == userId;
    }

    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      // Only admins can create, update, or delete products
      allow write: if isAdmin();
    }
    
    match /stock_adjustments/{adjustmentId} {
        allow read, write: if isAdmin();
    }

    match /orders/{orderId} {
      // Users can read their own orders, admins can read all orders
      allow read: if request.auth.uid == resource.data.customerId || isAdmin();
      // Users can create their own orders
      allow create: if request.auth.uid == request.resource.data.customerId;
      // Users can update their own orders (e.g., upload proof, cancel), admins can update any order
      allow update: if request.auth.uid == resource.data.customerId || isAdmin();
    }
    
    match /purchase_transactions/{transactionId} {
        allow read, write: if isAdmin();
    }
    
    match /operational_expenses/{expenseId} {
        allow read, write: if isAdmin();
    }
    
    match /bank_accounts/{accountId} {
      allow read: if true; // Everyone can see bank accounts for payment
      allow write: if isAdmin(); // Only admins can manage bank accounts
    }

    match /whatsapp_contacts/{contactId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /banners/{bannerId} {
      allow read: if true; // Allow anyone to read banners
      allow write: if isAdmin(); // Only admins can manage banners
    }

    match /promotions/{promoId} {
      allow read: if true; // Allow anyone to read promotions
      allow write: if isAdmin(); // Only admins can manage promotions
    }
  }
}
