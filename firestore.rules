rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user has a specific role
    function hasRole(role) {
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == role;
    }
    
    // Admins can read/write all data for management purposes
    match /{document=**} {
      allow read, write: if hasRole('owner') || hasRole('admin');
    }

    // Rules for User collection
    match /user/{userId} {
      // Any authenticated user can create their own user document (for registration)
      allow create: if request.auth != null;
      // Users can only read or update their own data
      allow read, update: if request.auth.uid == userId;
      // Admins can manage all user documents
      allow list, delete: if hasRole('owner') || hasRole('admin');
    }

    // Rules for Reseller-specific collections
    match /products/{productId} {
      allow read: if request.auth != null; // All authenticated users can read products
    }
    
    match /banners/{bannerId} {
       allow read: if request.auth != null; // All authenticated users can read banners
    }

    match /promotions/{promoId} {
       allow read: if request.auth != null; // All authenticated users can read promotions
    }

    match /trending_products/{trendingId} {
       allow read: if request.auth != null; // All authenticated users can read trending products
    }

    match /whatsapp_contacts/{contactId} {
        allow read: if request.auth != null; // All authenticated users can read contacts
    }
    
    match /bank_accounts/{accountId} {
      // Resellers need to read this for checkout
      allow read: if request.auth != null;
    }

    // Orders can be created by resellers, but only managed by admins
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update, delete: if hasRole('owner') || hasRole('admin');
      // A user can read their own orders
      allow read: if request.auth.uid == resource.data.customerId;
    }
    
    // Resellers can manage their own addresses
    match /user/{userId}/addresses/{addressId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Rules for Admin-only collections
    match /purchase_transactions/{transactionId} {
      allow read, write: if hasRole('owner') || hasRole('admin');
    }
    
    match /suppliers/{supplierId} {
       allow read, write: if hasRole('owner') || hasRole('admin');
    }
    
    match /operational_expenses/{expenseId} {
       allow read, write: if hasRole('owner') || hasRole('admin');
    }
    
    match /stock_adjustments/{adjustmentId} {
       allow read, write: if hasRole('owner') || hasRole('admin');
    }
  }
}
