rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has the 'admin' role
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for user data (profiles)
    match /user/{userId} {
      // Users can read/update their own profile. Admins can read any user.
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin(); // For registration and staff creation
      
      // Admins can delete users from the database.
      allow delete: if isAdmin();
      
      // Subcollection for user addresses
      match /addresses/{addressId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    // Rules for 'products' collection
    match /products/{productId} {
      // Anyone can read products.
      allow read: if true;
      // Only admins can create or delete products.
      allow create, delete: if isAdmin();
      // Admin can update anything. Resellers can only update stock (implicitly handled by order creation logic).
      // We keep this open for authenticated users to allow stock decrements via transactions.
      allow update: if request.auth != null; 
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
        // A logged-in user can create an order.
        allow create: if request.auth != null;
        // The owner of the order or an admin can read or update it.
        allow read, update: if isOwner(get(path).data.customerId) || isAdmin();
        // Only an admin can delete an order.
        allow delete: if isAdmin();
    }
    
    // Admin-only collections
    match /stock_adjustments/{adjustmentId} {
      allow read, write: if isAdmin();
    }

    match /purchase_transactions/{transactionId} {
      allow read, write: if isAdmin();
    }

    match /operational_expenses/{expenseId} {
      allow read, write: if isAdmin();
    }
    
    // Collections readable by all, writable only by admin
    match /bank_accounts/{accountId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /whatsapp_contacts/{contactId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /banners/{bannerId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /promotions/{promoId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /trending_products/{trendingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
