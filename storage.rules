rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files.
    // This is generally safe for public assets like product images.
    match /{allPaths=**} {
      allow read;
    }

    // Restrict write access to authenticated users only.
    // This prevents unauthenticated users from uploading files.
    match /product_images/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /payment_proofs/{allPaths=**} {
      allow write: if request.auth != null;
    }
     match /banners/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
